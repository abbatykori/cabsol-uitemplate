<ui:UiBinder xmlns:ui='urn:ui:com.google.gwt.uibinder'
        xmlns:g='urn:import:com.google.gwt.user.client.ui'
        xmlns:m.table='urn:import:gwt.material.design.client.ui.table'
        xmlns:m="urn:import:gwt.material.design.client.ui">

    <ui:with field="res" type="com.cabsol.uitemplate.client.resources.AppResources"/>

    <!--<ui:style>-->
        <!--@external side-nav, active;-->
        <!--body{-->
            <!--background-color: #fafafa;-->
        <!--}-->
        <!--.side-nav li.active{-->
            <!--font-weight: bold;-->
        <!--}-->
    <!--</ui:style>-->
    <m:MaterialPanel>
        <!-- Header -->
        <m:MaterialHeader layoutPosition="FIXED" width="100%" depth="996" top="0" >
            <!-- NavBar -->
            <m:MaterialNavBar backgroundColor="BLUE" activates="sidenavInbox">
                <m:MaterialNavBrand paddingLeft="60" text="Google Inbox" />
                <m:MaterialNavSection float="RIGHT">
                    <m:MaterialLink iconType="APPS" />
                    <m:MaterialLink iconType="NOTIFICATIONS" />
                    <m:MaterialImage circle="true" width="40px" height="40px" marginTop="12" marginRight="12" url="https://lh3.googleusercontent.com/-Zu_vZFIl9Ms/AAAAAAAAAAI/AAAAAAAAALk/2pPyCa-IKHg/s60-p-rw-no/photo.jpg" backgroundColor="WHITE" />
                </m:MaterialNavSection>
            </m:MaterialNavBar>
        </m:MaterialHeader>

        <!-- SideNav -->
        <m:MaterialSideNavPush m:id="sidenavInbox" width="250" withHeader="true">
            <m:MaterialLink text="Dashboard" iconType="DASHBOARD" textColor="GREY_DARKEN_2"/>
            <m:MaterialLink text="Users" iconType="ACCOUNT_CIRCLE" textColor="GREY_DARKEN_2"/>
            <m:MaterialLink text="Accounts" iconType="SUPERVISOR_ACCOUNT" textColor="RED"/>
            <m:MaterialLink text="Budget" iconType="ATTACH_MONEY" textColor="GREY_DARKEN_2"/>
            <m:MaterialLink text="Payments" iconType="PAYMENT" textColor="GREY_DARKEN_2"/>
            <m:MaterialLink text="Receipts" iconType="RECEIPT" textColor="GREY_DARKEN_2"/>
            <m:MaterialLink text="Reports" iconType="INSERT_CHART" textColor="GREY_DARKEN_2" separator="true"/>
            <m:MaterialLink text="Settings" iconType="SETTINGS" textColor="GREY_DARKEN_2"/>
        </m:MaterialSideNavPush>

        <!-- Container -->
        <m:MaterialContainer paddingLeft="330" paddingRight="100" marginTop="80">

            <m:MaterialButton text="Hello" ui:field="buttonX"></m:MaterialButton>

            <!-- Sample Code -->
            <m.table:MaterialDataTable ui:field="table"
                                       height="calc(100vh - 131px)"
                                       useStickyHeader="true"
                                       useCategories="true"
                                       useRowExpansion="true"
                                       selectionType="SINGLE"/>

        </m:MaterialContainer>

    </m:MaterialPanel>
</ui:UiBinder>
